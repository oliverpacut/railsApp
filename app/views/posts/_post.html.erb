<li id="post-<%= post.id %>">
  <%= link_to gravatar_for(post.profile, size: 50), post.profile %>
  <span class="profile"><%= link_to post.profile.name, post.profile %></span>
  <span class="content">
    <%= post.content %>
    <%= image_tag post.picture.url if post.picture? %>
  </span>
  <span class="timestamp">
    Posted <%= time_ago_in_words(post.created_at) %> ago.
    <% if current_profile?(post.profile) %>
      <%= link_to "delete", post, method: :delete, data: { confirm: "You sure?" } %>
    <% end %>
  </span>
</li>
